<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners
            android:radius="5dp" />
        <stroke
            android:width="2dp"
            android:color="#00000000"/>
        <gradient
            android:angle="-90"
            android:startColor="#8fd3ff"
            android:endColor="#b9e3ff"  />
    </shape>
</item>
<item>
    <shape android:shape="rectangle"  >
        <corners
            android:radius="5dp" />
        <stroke
            android:width="2dp"
            android:color="#00000000"/>
        <gradient
            android:startColor="#FF43b3c1"
            android:centerColor="#FF66c5dc"
            android:endColor="#FF8edafb"
            android:angle="90"/>
    </shape>
</item>
</selector>

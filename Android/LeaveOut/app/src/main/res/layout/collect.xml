<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"/>

    <TextView
        android:id="@+id/collect_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="20dp"
        android:textSize="23dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="장소" />

    <TextView
        android:id="@+id/collect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="시간"
        android:textSize="15dp"
        android:layout_below="@+id/collect_location"
        android:layout_alignStart="@+id/collect_location" />

    <TextView
        android:id="@+id/collect_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="글내용"
        android:textSize="20dp"
        android:layout_below="@+id/collect_name"
        android:layout_alignStart="@+id/collect_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFabdeff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/collect_contents"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/collect_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/public_comment" />

            <TextView
                android:id="@+id/collect_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="end|center_vertical"
                android:onClick="comment"
                android:text="댓글달기"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toEndOf="@+id/collect_contents"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#68c3fe"
            android:layout_weight="0.03">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/collect_follow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/public_follow"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/collect_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="follow"
                android:text="따라가기"
                android:gravity="end|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#68c3fe"
            android:layout_weight="0.03">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/collect_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/public_like"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/collect_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="like"
                android:text="추천하기"
                android:gravity="end|center_vertical"
                android:layout_marginRight="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/collect_recom"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/collect_time"
        android:layout_below="@+id/collect_time"
        android:text="추천 : " />

    <TextView
        android:id="@+id/collect_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="조회수 : "
        android:layout_alignBaseline="@+id/collect_recom_num"
        android:layout_alignBottom="@+id/collect_recom_num"
        android:layout_toEndOf="@+id/collect_recom_num" />

    <TextView
        android:id="@+id/collect_recom_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/collect_recom"
        android:layout_toEndOf="@+id/collect_recom"
        android:text="숫자" />

    <TextView
        android:id="@+id/collect_views_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/collect_views"
        android:layout_toEndOf="@+id/collect_views"
        android:text="숫자" />

</RelativeLayout>
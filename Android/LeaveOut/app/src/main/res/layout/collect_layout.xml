<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/public_toobar"
        app:contentInsetStart="0dp">

        <!--뒤로가기-->
        <ImageButton
            android:id="@+id/preferences_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="#00000000"
            android:onClick="Back"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/toolbar"
            app:srcCompat="@drawable/public_back" />

        <!--모아보기-->
        <TextView
            android:id="@+id/collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모아보기"
            app:font="custom1"
            android:textColor="#FF000000"
            android:textSize="35dp"
            android:layout_alignLeft="@id/preferences_back_icon"
            android:layout_alignTop="@id/preferences_back_icon" />

    </android.support.v7.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/collect_tab_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:fillViewport = "true">

        <android.support.design.widget.TabLayout
            android:id="@+id/collect_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="#FF000000"
            app:tabMinWidth="100dp"
            android:background="#cccccc" />
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/collect_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/collect_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/collect_tab_scroll"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
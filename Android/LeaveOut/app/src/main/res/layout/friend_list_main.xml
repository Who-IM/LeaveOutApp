<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/public_toobar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--검색 틀-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/public_bar"
        android:layout_below="@+id/toolbar">
    </RelativeLayout>

    <!-- 검색 상자 -->
    <EditText
        android:id="@+id/main_search"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:background="@drawable/public_search"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_below="@+id/toolbar" />

    <ImageButton
        android:id="@+id/search_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/main_search"
        android:layout_alignEnd="@+id/main_search"
        android:layout_alignTop="@+id/main_search"
        android:background="#00000000"
        app:srcCompat="@drawable/main_search_menu" />

    <!--뒤로가기-->
    <ImageButton
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:srcCompat="@drawable/public_back"
        android:background="#00000000"
        android:onClick="Back"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/toolbar" />

    <!--친구목록-->
    <TextView
        android:id="@+id/friend_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구목록"
        android:textColor="#FF000000"
        android:textSize="35dp"
        android:layout_alignLeft="@id/back_icon"
        android:layout_alignTop="@id/back_icon"
        android:layout_marginLeft="60dp" />


    <ExpandableListView
        android:id="@+id/friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/toolbar" />



</RelativeLayout>
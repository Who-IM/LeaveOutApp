<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friendrequest_image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:src="@drawable/basepicture"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/friendrequest_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_marginStart="5dp"
            app:font="custom2"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/friendrequest_button1"
            android:layout_toEndOf="@+id/friendrequest_image" />

        <Button
            android:id="@+id/friendrequest_button1"
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/friendrequest_button2" />

        <Button
            android:id="@+id/friendrequest_button2"
            android:text="요청 삭제"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
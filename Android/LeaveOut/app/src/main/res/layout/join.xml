<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_main">


    <TextView
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="40dp"
        android:text="회원가입"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_below="@+id/join_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/id_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="입력하세요"
        android:background="#FFFFFFFF"
        android:layout_alignTop="@+id/id_text"
        android:layout_toEndOf="@+id/re_pw_text"
        android:layout_marginStart="18dp" />
    <TextView
        android:id="@+id/pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_below="@+id/id_text"
        android:layout_alignStart="@+id/id_text"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/re_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비번 확인"
        android:layout_below="@+id/pw_text"
        android:layout_alignStart="@+id/pw_text"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/name_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_below="@+id/re_pw_text"
        android:layout_alignStart="@+id/re_pw_text"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/p_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화 번호"
        android:layout_below="@+id/name_insert"
        android:layout_alignStart="@+id/name_insert"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/mail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_below="@+id/p_number_text"
        android:layout_alignStart="@+id/p_number_text"
        android:layout_marginTop="30dp" />



</RelativeLayout>
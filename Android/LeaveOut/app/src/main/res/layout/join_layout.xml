<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_main"
    tools:ignore="missingPrefix"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="60dp"
        android:text="회원가입"
        app:font="custom1"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--ID 구간-->
    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*ID"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_below="@+id/join_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/id_insert"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:background="@drawable/login_text"
        android:hint="입력하세요"
        android:textSize="17dp"
        android:inputType="text"
        android:layout_marginLeft="90dp"
        android:layout_above="@+id/pw_text"
        android:layout_toEndOf="@+id/id_text"/>

    <TextView
        android:id="@+id/id_overlap"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="▼"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/id_insert"
        android:layout_alignTop="@+id/id_insert" />
    <!--ID 구간 끝-->

    <!--비밀번호 구간-->
    <TextView
        android:id="@+id/pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*비밀 번호"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_below="@+id/id_text"
        android:layout_alignStart="@+id/id_text"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/pw_insert"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_text"
        android:hint="입력하세요"
        android:textSize="17dp"
        android:layout_alignTop="@+id/pw_text"
        android:layout_alignStart="@+id/id_insert"
        android:inputType="text" />
    <!--비밀번호 구간 끝-->

    <!--비밀번호 확인 구간-->
    <TextView
        android:id="@+id/re_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*비번 확인"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_below="@+id/pw_text"
        android:layout_alignStart="@+id/pw_text"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/re_pw_insert"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:background="@drawable/login_text"
        android:hint="입력하세요"
        android:textSize="17dp"
        android:layout_alignTop="@+id/re_pw_text"
        android:layout_alignStart="@+id/pw_insert"
        android:inputType="text" />
    <!--비밀번호 확인 구간 끝-->

    <!--이름구간-->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*이름"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_below="@+id/re_pw_text"
        android:layout_alignStart="@+id/re_pw_text"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/name_insert"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:background="@drawable/login_text"
        android:hint="입력하세요"
        android:textSize="17dp"
        android:layout_alignTop="@+id/name_text"
        android:layout_alignStart="@+id/re_pw_insert"
        android:inputType="text" />
    <!--이름확인 구간 끝-->


    <!--email 구간-->
    <TextView
        android:id="@+id/mail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*E-mail"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_below="@+id/name_text"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/mail_insert"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:background="@drawable/login_text"
        android:hint="입력하세요"
        android:textSize="17dp"
        android:layout_alignTop="@+id/mail_text"
        android:layout_alignStart="@+id/name_insert"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <TextView
        android:id="@+id/email_overlap"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="▼"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/id_overlap"
        android:layout_alignBottom="@+id/mail_insert"
        android:layout_alignTop="@+id/mail_insert" />
    <!--email 구간 끝-->

    <!-- 회원가입 -->
    <Button
        android:id="@+id/find_insert"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="가입하기"
        android:background="@drawable/login_button"
        android:textSize="23dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/mail_text"
        android:layout_marginLeft="60dp"
        android:onClick="joinOnClicked"/>

    <!-- 취소 -->
    <Button
        android:id="@+id/find_cancel"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="취소"
        android:background="@drawable/login_button"
        android:textSize="23dp"
        android:layout_marginRight="60dp"
        android:layout_alignBottom="@+id/find_insert"
        android:layout_alignParentEnd="true"
        android:onClick="joinOnClicked"/>

</RelativeLayout>
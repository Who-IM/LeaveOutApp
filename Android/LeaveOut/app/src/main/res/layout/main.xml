<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/public_toobar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--지도 틀-->
    <RelativeLayout
        android:id="@+id/mainmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout7"
        android:layout_below="@+id/editText">

        <!-- 구글 지도 화면 -->
        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <!-- 검색 상자 -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_marginLeft="60dp"
        android:background="@drawable/public_search"
        android:textSize="20dp" />

    <!-- 돋보기 버튼 -->
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignTop="@+id/editText"
        android:background="#00000000"
        app:srcCompat="@drawable/main_search_menu" />

    <!--버튼용 레이아웃-->
    <LinearLayout
        android:id="@+id/buttonLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <!-- 글쓰기 버튼 -->
        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/public_button"
            android:onClick="writeButton"
            android:text="글쓰기"
            android:textColor="#FFFFFFFF"
            android:textSize="30dp" />

        <!-- 체크 버튼 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/public_button"
            android:onClick="checkButton"
            android:text="체크"
            android:textColor="#FFFFFFFF"
            android:textSize="30dp" />

        <!-- 모아보기 버튼 -->
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/public_button"
            android:text="모아보기"
            android:textColor="#FFFFFFFF"
            android:textSize="30dp" />
    </LinearLayout>

    <!--경계선-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FF8CF3FF"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonLayer"
        android:id="@+id/relativeLayout7">
    </RelativeLayout>

    <!--위치 정보 칸 지도 넣으면 변경-->
    <TextView
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/gps_location"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <!-- 메뉴바 -->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_activity_main_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:id="@+id/fl_activity_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 메뉴버튼 -->
            <ImageButton
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:srcCompat="@drawable/public_menu"
                android:layout_margin="15dp"
                />
        </FrameLayout>

        <!-- 메뉴바 나타나는 창 -->
        <ListView
            android:id="@+id/lv_activity_main_nav_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#EDEDED"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.DrawerLayout>


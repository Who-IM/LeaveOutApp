<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu_preferences_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/preferences_icon"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp" />

    <!-- 프로필 -->
    <TextView
        android:id="@+id/menu_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="환경설정"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/menu_preferences_icon"
        android:layout_toEndOf="@+id/menu_preferences_icon"
        android:layout_marginStart="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/menu_preferences_icon"
        android:background="#477e7d"
        android:layout_alignParentStart="true">

    </RelativeLayout>

</RelativeLayout>
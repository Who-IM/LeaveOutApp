<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/rectangle_menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--뒤로가기-->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:background="#00000000"
        android:onClick="Back"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar"
        app:srcCompat="@drawable/back" />

    <!--환경설정-->
    <TextView
        android:id="@+id/preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/imageButton"
        android:text="환경설정"
        android:textColor="#FF000000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="기본설정"
        android:textSize="30dp"
        android:textColor="#FFBBBBBB"
        android:layout_below="@+id/imageButton"/>

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="기본범위"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:layout_below="@+id/setting"
        android:layout_alignStart="@+id/setting" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/range"
        android:layout_below="@+id/range"
        android:text="공개여부"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/open"
        android:layout_below="@+id/open"
        android:text="푸쉬알림"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/push"
        android:layout_below="@+id/push"
        android:layout_marginTop="40dp"
        android:text="GPS"
        android:textSize="25dp"
        android:textColor="#FF000000"/>

    <TextView
        android:id="@+id/autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="자동로그인"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:layout_below="@+id/gps"
        android:layout_alignStart="@+id/gps" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="40dp"
        android:onClick="logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
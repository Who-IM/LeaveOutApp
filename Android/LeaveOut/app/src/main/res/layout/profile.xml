<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_Image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/profile_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_Image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/profile_Image"
        android:text="장소"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/profile_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_location"
        android:layout_below="@+id/profile_location"
        android:layout_marginTop="10dp"
        android:text="시간"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/profile_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_time"
        android:layout_below="@+id/profile_time"
        android:layout_marginTop="12dp"
        android:text="추천 : " />

    <TextView
        android:id="@+id/profile_recom_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_recom"
        android:layout_toEndOf="@+id/profile_recom"
        android:text="숫자" />

    <TextView
        android:id="@+id/profile_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_recom_num"
        android:layout_alignBottom="@+id/profile_recom_num"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/profile_recom_num"
        android:text="조회수 : " />

    <TextView
        android:id="@+id/profile_views_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_views"
        android:layout_toEndOf="@+id/profile_views"
        android:text="숫자" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profile_Image"
        android:layout_alignStart="@+id/profile_Image"
        android:layout_below="@+id/profile_Image"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="이름" />

    <TextView
        android:id="@+id/profile_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_name"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="20dp"
        android:text="글내용"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_contents"
        android:layout_marginTop="13dp"
        android:background="#FFabdeff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/profile_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/public_comment"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp" />

            <TextView
                android:id="@+id/profile_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:gravity="end|center_vertical"
                android:onClick="comment"
                android:text="댓글달기" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/profile_contents"
            android:layout_weight="0.03"
            android:background="#68c3fe"></View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/profile_follow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/public_follow"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/profile_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:gravity="end|center_vertical"
                android:onClick="follow"
                android:text="따라가기" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.03"
            android:background="#68c3fe">
        </View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/profile_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/public_like"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="21dp" />

            <TextView
                android:id="@+id/profile_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="end|center_vertical"
                android:onClick="like"
                android:text="추천하기"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
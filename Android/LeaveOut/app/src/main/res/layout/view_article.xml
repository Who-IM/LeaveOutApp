<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_Image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/basepicture"/>

    <TextView
        android:id="@+id/view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_Image"
        android:layout_marginStart="20dp"
        android:textSize="23dp"
        android:layout_toEndOf="@+id/view_Image"
        android:text="장소" />

    <TextView
        android:id="@+id/view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="시간"
        android:textSize="15dp"
        android:layout_below="@+id/view_location"
        android:layout_alignStart="@+id/view_location" />

    <TextView
        android:id="@+id/view_recom"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view_time"
        android:layout_below="@+id/view_time"
        android:text="추천 : " />

    <TextView
        android:id="@+id/view_recom_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_recom"
        android:layout_toEndOf="@+id/view_recom"
        android:text="숫자" />

    <TextView
        android:id="@+id/view_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="조회수 : "
        android:layout_alignBaseline="@+id/view_recom_num"
        android:layout_alignBottom="@+id/view_recom_num"
        android:layout_toEndOf="@+id/view_recom_num" />

    <TextView
        android:id="@+id/view_views_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_views"
        android:layout_toEndOf="@+id/view_views"
        android:text="숫자" />

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:gravity="center_horizontal"
        android:layout_below="@+id/view_Image"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/view_Image"
        android:layout_alignEnd="@+id/view_Image"/>


    <TextView
        android:id="@+id/view_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="글내용"
        android:textSize="20dp"
        android:layout_below="@+id/view_name"
        android:layout_alignStart="@+id/view_name" />
    <GridView
        android:id="@+id/view_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/view_contents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFabdeff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_grid"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/view_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/public_comment" />

            <TextView
                android:id="@+id/view_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:gravity="end|center_vertical"
                android:onClick="comment"
                android:text="댓글보기" />

            <Button
                android:id="@+id/views_comment_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toEndOf="@+id/view_contents"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#68c3fe"
            android:layout_weight="0.03">

        </View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/view_follow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/public_follow"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/view_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="follow"
                android:text="따라가기"
                android:gravity="end|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="#68c3fe"
            android:layout_weight="0.03">
        </View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/view_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/public_like"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/view_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="like"
                android:text="추천하기"
                android:gravity="end|center_vertical"
                android:layout_marginRight="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/view_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/public_open_list" />


    <RelativeLayout
        android:id="@+id/view_mycomment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/public_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/view_comment_list">

        <ImageView
            android:id="@+id/view_mycomment_image"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/view_comment_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/public_search"
            android:inputType="text"
            android:hint="댓글을 입력하시오.."
            android:padding="5dp"
            android:layout_alignBottom="@+id/view_mycomment_image"
            android:layout_toEndOf="@+id/view_mycomment_image"
            android:layout_alignTop="@+id/view_mycomment_image" />

    </RelativeLayout>

</RelativeLayout>
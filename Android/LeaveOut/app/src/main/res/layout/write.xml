<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--툴바-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/rectangle_menu"
        />

    <!--뒤로가기-->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:onClick="writeBack"
        app:srcCompat="@drawable/back"
        android:layout_margin="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/toolbar" />

    <!--게시-->
    <Button
        android:id="@+id/Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="게시"
        android:textColor="#77FFFFFF"
        android:textSize="27dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentEnd="true" />

    <!--StamLine에 게시-->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StampLine에 게시"
        android:textSize="33dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <!--위치정보-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/toolbar"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="위치정보 : "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blackline1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:hint="글을 입력하세요."
        android:textSize="20dp" />

    <!--울타리글-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/checkBox"
        android:text="울타리글"
        android:textSize="25dp" />

    <!--공개여부-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blackline2"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="11dp"
        android:text="공개여부"
        android:textSize="25dp" />

    ---------------------------------------------------------

    <!--검은색 선-->
    <RelativeLayout
        android:id="@+id/blackline1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blackline2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:background="#000000"></RelativeLayout>

    <!--울타리글 체크박스-->
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/Button3" />

    <!--공개여부 체크박스-->
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/checkBox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/blackline2"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            app:srcCompat="@drawable/friend" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            app:srcCompat="@drawable/camera" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/image" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:layout_weight="1"
            app:srcCompat="@drawable/calender" />
    </LinearLayout>

</RelativeLayout>